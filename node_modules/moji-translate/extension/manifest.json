{
  "manifest_version": 2,

  "name" : "Emoji Translate",
  "description" : "Translates english words into magical emoji characters",
  "version" : "1.0.3",

  "permissions": [
    "activeTab"
  ],

  "icons": {
   "128": "logo.png"
  },

  "web_accessible_resources": [
    "emojis.json"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "logo.png",
    "default_title" : "Translate to emoji!"
  }
}
